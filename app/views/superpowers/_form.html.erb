<%= form_for @superpower do |f| %>

<% if @superpower.errors.size > 0 %>
  <ul>
    <% @superpower.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= f.label :name, 'Superpower'%>
  <%= f.text_area :name %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

  <%= f.submit 'Add Superpower' %>

<% end %>
