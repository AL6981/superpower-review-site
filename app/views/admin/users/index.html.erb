<h2 class="ru">Registered Users</h2>

<div class="admin-panel">
    <table class="table">
      <tr>
        <th>User Email</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end%>
    </table>
</div>
